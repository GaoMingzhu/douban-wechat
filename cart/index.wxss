/* pages/cart/index.wxss */
page{
  background:#f3f2f2;
}
.head{
  height:100rpx;
  width:90%;
  padding:0 5%;
  color:#44883e;
  font-size: 50rpx;
  line-height:100rpx;
  background:white;
}
.quanxuan{
  float:left;
  height:30rpx;
  width:30rpx;
  border:4rpx solid #ababac;
}
.gouxuan{
  float:left;
  height:30rpx;
  width:30rpx;
  border:4rpx solid #ababac;
  margin:85rpx 40rpx 85rpx 0;
}
.qx-title{
  height:100rpx;
  width:94%;
  padding:0 3%;
  line-height:100rpx;
  color:#ababac;
  font-size:35rpx;
  background:white;
  margin-bottom:8rpx;
}
.qx-title .quanxuan{
  margin:35rpx 40rpx 35rpx 0;
}
.proItem{
  position: relative;
  float:left;
  min-height:200rpx;
  width:97%;
  background:white;
  padding-left:3%;
  margin-bottom: 4rpx;
}
.proItem image{
  height:160rpx;
  width:160rpx;
  margin:20rpx 0;
  float:left;
}
.wicket{
  position: fixed;
  bottom:0;
  height:110rpx;
  width:97%;
  background:white;
  padding-left:3%;
}
.wicket .quanxuan{
  margin:40rpx 40rpx 40rpx 0;
}
.proBox{
  float:left;
  width:42%;
  height:100%;
  margin-left: 20rpx;
}
.proTitle{
  float:left;
  color:#3e3a39;
  width:100%;
  font-size:30rpx;
  margin:20rpx 0 5rpx 0;
}
.proDesc{
  float:left;
  color:#ababac;
  font-size:30rpx;
  width:100%;
  margin-bottom:10rpx;
}
.numBox{
  float:left;
  width:70%;
  height:65rpx;
  border:2rpx solid #f3f2f2;
}
.jian{
  float:left;
  width:30%;
  height:100%;
  line-height:65rpx;
  text-align: center;
  font-size:40rpx;
  color:#ababac;
  background:#f3f2f2;
}
.number{
  float:left;
  width:40%;
  height:100%;
  background:white;
